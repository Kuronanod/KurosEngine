{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build glfw project",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/graphic.cpp",
                "${workspaceFolder}/render.cpp",
                "${workspaceFolder}/world_generate.cpp",
                "${workspaceFolder}/world.cpp",
                "${workspaceFolder}/chunk_worker.cpp",
                "-I${workspaceFolder}/include",
                "-lglfw",
                "-lGL",
                "-ldl",
                "-lpthread",
                "-o",
                "${workspaceFolder}/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}