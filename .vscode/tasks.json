{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build glfw project",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}